{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "socket.io"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/models/*": ["model/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
